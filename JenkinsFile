pipeline {
    agent any

    tools {
        maven 'maven'  // Ensure this name matches the Maven tool in Jenkins Global Tools
    }

    environment {
        IMAGE_NAME = "mediq-backend"
        CONTAINER_NAME = "mediq"
    }

    stages {
        stage('Clone Code') {
            steps {
                git branch: 'main', url: 'https://github.com/ALAN-K-BIJU/mediq-backend.git'  // Make sure the branch is correct
            }
        }

        stage('Build with Maven') {
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t $IMAGE_NAME .'
            }
        }

        stage('Stop Old Container') {
            steps {
                script {
                    sh "docker stop $CONTAINER_NAME || true"
                    sh "docker rm $CONTAINER_NAME || true"
                }
            }
        }

        stage('Run New Container') {
            steps {
                sh "docker run -d --name $CONTAINER_NAME -p 9090:9090 $IMAGE_NAME"
            }
        }
    }

    post {
        success {
            echo '✅ Deployed MediQ successfully!'
        }
        failure {
            echo '❌ Build failed.'
        }
    }
}
